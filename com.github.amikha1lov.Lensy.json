{
    "app-id" : "com.github.amikha1lov.Lensy",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.36",
    "sdk" : "org.gnome.Sdk",
    "command" : "lensy",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.gnome.Shell.Screenshot",
        "--filesystem=xdg-pictures",
        "--filesystem=/tmp"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [

        {
            "name" : "lensy",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "branch" : "trash",
                    "url" : "."
                }
            ]
        }
    ],
    "build-options" : {
        "env" : {
        }
    }
}
